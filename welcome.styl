#welcome-one span,
#welcome-two span
  opacity 0
  transition all 0.3s
  color c-yellow-js

#welcome-one
  transition all 0.3s
  animation shake-it 4.2s alternate infinite

#welcome-two
  transition all 0.3s
  animation shake-it 9.2s alternate infinite

.welcome,
.flashy
  padding 50px
  cursor pointer

.welcome
